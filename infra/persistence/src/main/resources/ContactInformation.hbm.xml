<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   
   <class name = "ContactInformation" table="contact_information">
      
      <meta attribute = "class-description">
         This class contains the ContactInformation detail. 
      </meta>
      
      <id name="id" type="int">
         <column name="id" />
         <generator class="foreign">
            <param name="property">person</param>
         </generator>
      </id>
      <one-to-one name="person" class="Person"
         constrained="true"></one-to-one>

      <property name = "landline" column = "landline" type = "long"/>
      <property name = "mobileNumber" column = "mobile_number" type = "long"/>
      <property name = "email" column = "email" type = "string"/>
      
   </class>


</hibernate-mapping>